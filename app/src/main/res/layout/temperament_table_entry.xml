<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/note_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="14sp"
        android:text="C#"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        />

    <TextView
        android:id="@+id/cent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/note_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="12sp"
        android:text="1200c"
        android:textColor="?attr/colorOnSurfaceVariant"
        />

    <TextView
        android:id="@+id/ratio_numerator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cent"
        android:layout_margin="4dp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="11sp"
        />

    <TextView
        android:id="@+id/ratio_denominator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ratio_numerator"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="11sp"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/fraction_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="ratio_numerator,ratio_denominator"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/fraction_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="ratio_numerator,ratio_denominator"
        />
    <View
        android:id="@+id/ratio_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurfaceVariant"
        app:layout_constraintStart_toStartOf="@id/fraction_start"
        app:layout_constraintEnd_toEndOf="@id/fraction_end"
        app:layout_constraintTop_toBottomOf="@id/ratio_numerator"
        app:layout_constraintBottom_toTopOf="@id/ratio_denominator"
        />
</androidx.constraintlayout.widget.ConstraintLayout>